extends ../partials/head.pug
block content
  .all-inner-wrapper 
    .header-wrapper 
      a(href="/").logo-section 
        img.logo-image(src="/res/images/logo.png", alt="SDG Logo")
      .header-search-bar-section
        input#search(type="text" placeholder="Search for projects and organizations") 
        i(class="fa fa-search")
        .search-bar-results-section#search-res
          .search-results-entry-text 
            div no results found
      .header-titles-section 
        .each-header-title 
          a(href="/my-projects") My projects
        .each-header-title 
          a(href="/leaderboard") Leaderboard
        .each-header-title
          div Progress
          span soon
        .each-header-title
          div Learn
          span soon
      .auth-section
        if volunteer 
          a(href="/volunteer/edit-profile").volunteer-auth-block #{volunteer.name[0]}#{volunteer.surname[0]}
        else 
          a(href="/login").each-auth-operation-block Login 
          a.each-auth-operation-block(href="/register" style="background-color:rgba(0, 115, 255, 1); color: #ffffff") Sign Up 
    .inner-main-wrapper 
      .goal-main-wrapper 
        .goal-main-wrapper-goal-content 
          h1 #{volunteer.hoursOfServiceGoal} 
          div hours social service goal
        .goal-main-wrapper-goal-content-detail
          h2 #{volunteer.totalHoursOfService} &nbsp
          div hours of total service estimated
        .goal-main-wrapper-goal-content-detail
          h2 #{volunteer.completedHoursOfService.toFixed(1)} &nbsp
          div hours of total service completed
        .goal-main-wrapper-progress-bar
          .goal-main-wrapper-progress-bar-inner-bar(style=`width: ${((volunteer.completedHoursOfService / volunteer.hoursOfServiceGoal) * 100).toFixed(0)}% !important; background-color: rgba(0, 115, 255, 0.5);`)
          .goal-main-wrapper-progress-bar-inner-bar(style=`width: ${((volunteer.totalHoursOfService / volunteer.hoursOfServiceGoal) * 100).toFixed(0)}% !important; background-color: rgba(0, 115, 255, 0.5)`)
        .goal-main-wrapper-desc-text
        .goal-main-wrapper-edit-goal-wrapper
          button.edit-goal-button#edit-goal-button Set a New Goal
      - var cityRank = 0;
      - var countryRank = 0;
      - var schoolRank = 0;
      each volunteerSchool in leaderboardData.school
        if `${volunteerSchool._id}` == `${volunteer._id}`
          .each-ranking-content 
            .each-ranking-content-rank #{schoolRank + 1}. 
            div in your school
        else
          - schoolRank++
      each volunteerCity in leaderboardData.city
        if `${volunteerCity._id}` == `${volunteer._id}`
          .each-ranking-content 
            .each-ranking-content-rank #{cityRank + 1}. 
            div in your city
        else
          - cityRank++
      each volunteerCountry in leaderboardData.country
        if `${volunteerCountry._id}` == `${volunteer._id}`
          .each-ranking-content 
            .each-ranking-content-rank #{countryRank + 1}.
            div in your country
        else
          - countryRank++
  footer
    .footer-column-wrapper
      .each-footer-column
        .each-footer-column-title Volunteer Menu
        hr
        a(href="/").each-footer-column-link Volunteer Home
        a(href="/my-projects").each-footer-column-link My Projects
        a(href="/volunteer/edit-profile").each-footer-column-link Edit Profile
        a(href="/").each-footer-column-link Leaderboard (coming soon)
        a(href="/").each-footer-column-link Progress (coming soon)
        a(href="/").each-footer-column-link Learn (coming soon)
        a(href="/").each-footer-column-link Portfolio (coming soon)
      .each-footer-column
        .each-footer-column-title Running An Organization?
        hr
        a(href="/organization/register").each-footer-column-link Sign up as an organization
        a(href="/organization/login").each-footer-column-link Organization login
      .each-footer-column
        .each-footer-column-title Corporate Links
        hr
        a(href="/").each-footer-column-link Join Our Team
        a(href="/").each-footer-column-link Privacy Policy
        a(href="/").each-footer-column-link Terms and Conditions
    .footer-column-wrapper(style="justify-content: space-between")  
      div Powered by Üsküdar American Academy
      div All Rights Reserved 2023®