extends ../partials/header.pug
block content 
    .all-inner-wrapper
        .header-content 
            .admin-info-wrapper 
                .admin-name-surname Welcome back #{admin.name_surname}!
                .admin-type #{admin.admin_type}
            .sdg-goal-image
                img(src="/res/images/un.png", alt="United Nations")
                img(src="/res/images/sdg.png" alt="Sustainable Development Goals")
        .main-content 
            .projects-content 
                each project in projectsArray 
                    .each-project-content 
                        .each-project-info-wrapper
                            .each-project-info(style="display:none") #{project._id}
                            .each-project-info Name: #{project.name}
                            .each-project-info Creator: #{project.creator_name}
                            .each-project-info Description: #{project.short_description}
                        input(type="checkbox" checked=project.isTodaysPick).each-project-check-todays-pick-button
        .footer-content
            .signature-text powered by Üsküdar American Academy