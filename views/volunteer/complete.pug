extends ../partials/header.pug
block content
  script(src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/intlTelInput.min.js") 
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/css/intlTelInput.css")
  .all-inner-wrapper 
    .main-profile-wrapper
      form.profile-edit-form(method="post" action="/volunteer/complete_account")
        .profile-edit-heading 
          h2 Complete Your Profile To Proceed
          img(src="/res/images/logo.png")
        hr.profile-edit-separator
        div.profile-edit-name-group
          label.profile-edit-label(for="name") Name
          input.profile-edit-input(type="text" name="name" value=`${volunteer.name}` required)
          label.profile-edit-label(for="surname") Surname
          input.profile-edit-input(type="text" name="surname" value=`${volunteer.surname}` required)
        div.profile-edit-birthdate-group
          label.profile-edit-label(for="birthdate") Birthdate
          input.profile-edit-input(type="date" value=`${volunteer.birth_date}` name="birth_date" required)
        div.profile-edit-school-group
          label.profile-edit-label(for="school") School
          select#school(name="school" required).profile-edit-input
            option(value="") Choose
            option(value="Uskudar American Academy") Üsküdar Amerikan Lisesi
            option(value="Robert College") Robert Koleji
            option(value="Alman Lisesi") Alman Lisesi
            option(value="Sev American College") Sev Amerikan Lisesi
          label.profile-edit-label(for="school-number") School Number
          input.profile-edit-input(type="number" value=`${volunteer.school_number}` name="school_number" required)
        div.profile-edit-school-group
          label.profile-edit-label(for="school") Phone Number
          input.profile-edit-input(type="tel" value=`${volunteer.phone_number}` id="phone" name="phone_number" placeholder="530 000 0000" required)
          label.profile-edit-label(for="gender") Gender
          select.profile-edit-input(name="gender" required) 
            option(value="") Choose
            option(value="m") Male
            option(value="f") Female
            option(value="o") Don't Specify
        div.profile-edit-bio-group
          label.profile-edit-label(for="bio") Bio
          textarea.profile-edit-textarea(name="bio" required) #{volunteer.bio}
        div.profile-edit-location-group
          label.profile-edit-label(for="country") Country
          select#country(name="country" required).profile-edit-input
            option(value="Turkey") Turkey
            option(value="Canada") Canada
            option(value="USA") USA
            option(value="Germany") Germany
            option(value="Ukraine") Ukraine
            option(value="Greece") Greece
            option(value="France") France
            option(value="Italy") Italy
            option(value="Belgium") Belgium
          label.profile-edit-label(for="city") City
          select#city(name="city" required).profile-edit-input
            option(value="") Choose
            option(value="Istanbul") Istanbul
            option(value="Ankara") Ankara
            option(value="Izmir") Izmir
            option(value="Antalya") Antalya
            option(value="Bursa") Bursa
            option(value="Adana") Adana
            option(value="Konya") Konya
            option(value="Muğla") Muğla
            option(value="Trabzon") Trabzon
            option(value="Izmit") İzmit
        button.profile-edit-button(type="submit") Proceed